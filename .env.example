# Solana RPC (API key required)
RPC_URL=https://rpc.ankr.com/solana_devnet/<YOUR_API_KEY>

# Optional: use a public endpoint for airdrops if your RPC blocks requestAirdrop
AIRDROP_RPC_URL=https://api.devnet.solana.com

# Key storage
KEYSTORE_DIR=keys
KEYSTORE_PASSPHRASE=change-me

# Agent registry storage
AGENT_STORE=data/agents.json

# Spending limits (SOL per agent)
DEFAULT_SPENDING_LIMIT=1.0

# Program allowlist (comma-separated program IDs, empty = allow all)
PROGRAM_ALLOWLIST=

# Kora RPC endpoint for gasless transactions (optional)
KORA_RPC_URL=
